---
import { ViewTransitions } from "astro:transitions";

import { SITE } from "@/siteConfig";

import Favicons from "@/components/Favicons.astro";
---

<head>
  <!-- Open Graph (usado por WhatsApp, Facebook, LinkedIn) -->
  <meta property="og:type" content="website" />
  <meta property="og:title" content={SITE.name} />
  <meta
    property="og:description"
    content="ðŸ’» Links Ãºtiles de la carrera de Compu de FAMAF"
  />
  <meta property="og:url" content={Astro.site} />
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="HandheldFriendly" content="True" />
  <meta name="format-detection" content="telephone=no" />
  <meta name="referrer" content="no-referrer-when-downgrade" />
  <meta
    name="viewport"
    content="width=device-width, initial-scale=1.0, user-scalable=yes"
  />
  <meta name="generator" content={Astro.generator} />
  <meta
    name="theme-color"
    content="#fff"
    media="(prefers-color-scheme: light)"
  />
  <meta
    name="theme-color"
    content="#000"
    media="(prefers-color-scheme: dark)"
  />

  <link rel="sitemap" href="/sitemap-index.xml" />
  <link rel="manifest" href="/site.webmanifest" />
  <link
    rel="alternate"
    type="application/rss+xml"
    title={SITE.name}
    href={new URL("rss.xml", Astro.site)}
  />

  <ViewTransitions />
  <Favicons />

  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-VG2JS6ZCGY"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'G-VG2JS6ZCGY', {
      custom_map: {
        'tree_carrera_event_category': 'event_category',
        'tree_carrera_event_action': 'event_action',
        'tree_carrera_event_label': 'event_label',
        'tree_carrera_event_value': 'event_value'
      }
    });

    // Tracking de Moovimiento
    gtag('event', 'tree_carrera_moovimiento', {
      'event_category': 'engagement',
      'event_action': 'page_view',
      'event_label': 'tree_carrera_homepage'
    });
  </script>

  <slot />
</head>
