import Countdown from "@/components/Countdown.astro";
---

<Introduction />

<Countdown />

<ul class="grid gap-y-6 pb-12 pt-4 text-center">
  {
    SITE.customLinks.map((link) => {
      const hasClipEmoji = link.title.includes("ðŸ”—");
      
      // Determinar el nombre del evento basado en el tÃ­tulo del link
      let eventName = 'tree_carrera_link_click';
      if (link.title.includes("Materias de Algoritmos")) {
        eventName = 'tree_carrera_links_1';
      } else if (link.title.includes("Curso de Ingreso")) {
        eventName = 'tree_carrera_curso_ingreso';
      } else if (link.title.includes("Calendario AcadÃ©mico")) {
        eventName = 'tree_carrera_calendario_academico';
