---
// Componente de cuenta regresiva para inscripciones al cursado
---

<div class="countdown-container text-center py-4">
  <a href="https://autogestion.guarani.unc.edu.ar/" 
     target="_blank" 
     rel="noopener noreferrer"
     class="countdown-link block hover:opacity-80 transition-opacity cursor-pointer"
     onclick="gtag('event', 'tree_carrera_countdown_click', { 'event_category': 'countdown', 'event_action': 'click', 'event_label': 'tree_carrera_autogestion_guarani', 'event_value': 1 });">
  <h2 class="text-2xl font-bold mb-4 text-blue-600">Inscripciones al Cursado del 2do Cuatri</h2>
    <div class="countdown-timer text-xl font-mono">
      <span id="days">--</span> d√≠as, 
      <span id="hours">--</span> horas, 
      <span id="minutes">--</span> min,
      <span id="seconds">--</span> segs
    </div>
  </a>
    <p class="text-sm text-gray-600 mt-2">04/08/2025 al 15/08/2025</p>
  
</div>

<script>
  function updateCountdown() {
    // Fecha objetivo: 4 de agosto de 2025 a las 14:00 PM en Argentina (UTC-3)
    const targetDate = new Date('2025-08-04T14:00:00-03:00');
    const now = new Date();
    const difference = targetDate.getTime() - now.getTime();
    
    if (difference <= 0) {
      document.getElementById('days').textContent = '0';
      document.getElementById('hours').textContent = '0';
      document.getElementById('minutes').textContent = '0';
      document.getElementById('seconds').textContent = '0';
      return;
    }
    
    const days = Math.floor(difference / (1000 * 60 * 60 * 24));
    const hours = Math.floor((difference % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    const minutes = Math.floor((difference % (1000 * 60 * 60)) / (1000 * 60));
    const seconds = Math.floor((difference % (1000 * 60)) / 1000);
    
    document.getElementById('days').textContent = days.toString().padStart(2, '0');
    document.getElementById('hours').textContent = hours.toString().padStart(2, '0');
    document.getElementById('minutes').textContent = minutes.toString().padStart(2, '0');
    document.getElementById('seconds').textContent = seconds.toString().padStart(2, '0');
  }
  
  // Actualizar cada segundo
  updateCountdown();
  setInterval(updateCountdown, 1000);
</script> 